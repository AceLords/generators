<?php

namespace DummyNamespace;

use Illuminate\Support\Facades\DB;

class DummyClass
{
    protected $model;

    /**
     * Create a new event instance.
     *
     * @return void
     */
    public function __construct(Model $model)
    {
        $this->model = $model;
    }

    /**
     * fetch all records
     *
     * @param string $pagination
     *
     * @return CategoryResourceCollection
     */
    public function get($pagination = 'm')
    {
        $data = $this->model->orderBy('name', 'desc')
            ->paginate(core_paginate($pagination));

        return new ModelResourceCollection($data);
    }

    /**
     * find model record
     * @param $id
     *
     * @return CartResource
     */
    public function find($id)
    {
        $cart = $this->model->findOrFail($id);

        return new ModelResource($cart);
    }

    /**
     * search records
     *
     * @param string $pagination
     *
     * @return CategoryResourceCollection
     */
    public function search($pagination = 'm')
    {
        $term = request('search');

        $data = $this->model
            ->where('name', 'LIKE', '%' . $term . '%')
            ->orderBy('name', 'desc')
            ->paginate(core_paginate($pagination));

        return new ModelResourceCollection($data);
    }

    /**
     * create a new record
     *
     * @return ModelResource
     */
    public function create()
    {
        try {
            DB::beginTransaction();

            $data = $this->model->create([
                //
            ]);

            DB::commit();
        } catch (\Exception $e) {
            DB::rollBack();

            env('APP_DEBUG') ? ddd($e->getMessage()) : false;

            return false;
        }

        return new ModelResource($data);
    }

    /**
     * update a record
     *
     * @return ModelResource
     */
    public function update($id)
    {
        try {
            DB::beginTransaction();

            $data = $this->model->findOrFail($id);

            $data->update([
                //
            ]);

            DB::commit();
        } catch (\Exception $e) {
            DB::rollBack();

            env('APP_DEBUG') ? ddd($e->getMessage()) : false;

            return false;
        }

        return new ModelResource($data);
    }

    /**
     * delete a record
      *
     * @param $id
     *
     * @return mixed
     */
    public function delete($id)
    {
        return $this->model->findOrFail($id)->delete();
    }
}
